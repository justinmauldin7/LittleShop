<div class="form_container">
  <h1>New Item</h1>

  <%= form_for [@dashboard, @item], url: '/dashboard/items' do |f| %>

    <div class="form-group">
      <%= f.text_field :item_name, placeholder: "Item Name", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :image_url, placeholder: "Image URL", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.number_field :inventory, min: 0.0, placeholder: "Inventory", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.number_field :price, min: 0.0,  placeholder: "Price", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :description, placeholder: "Description", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit %>
    </div>

    <% if @item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
        <ul>
          <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <% end %>
</div>
