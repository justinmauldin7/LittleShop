<section class="jumbotron">
  <i class="fas fa-mask"></i>
  <h1>Items</h1>
</section>


<div class="row">
    <% @items.each do |item| %>
      <% if item.enabled == true %>
        <div class="item col-md-3">
        <h2><%= link_to item.item_name, item_path(item) %>:</h2>
        <h2><%= number_to_currency(item.price) %></h2>
        <a href='<%=item_path(item) %>'><img src="<%=item.image_url%>" </a>
        <h4>Quantity in Stock: <%= item.inventory %></h4>
        <h5>Item Description: <%= item.description %></h5>
        <h4>Merchant Name: <%= item.merchant_name %></h4>
        </div>
        <!-- <td>< %= link_to 'Show', item %></td>
        <td>< %= link_to 'Edit', edit_item_path(item) %></td>
        <td>< %= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      <% end %>
    <% end %>
</div>

<br>

