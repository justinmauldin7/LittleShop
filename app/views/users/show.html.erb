<h1>Welcome, <%= @current_user.email %></h1>

<div class="profile_info">
  <p>Name: <%= @current_user.name %></p>
  <p>Email: <%= @current_user.email %></p>
  <p>Address: <%= @current_user.address %></p>
  <p>City: <%= @current_user.city %></p>
  <p>State: <%= @current_user.state %></p>
  <p>Zipcode: <%= @current_user.zipcode %></p>
</div>

<%= link_to "Edit Profile", profile_edit_path(@current_user) %>

<div class="all-orders">
  < % @current_user.order.each do |order_item| %>
   < %= order_item.item.item_name %>
  < %= binding.pry %>
  < % end %>
</div>

<%= binding.pry %>
